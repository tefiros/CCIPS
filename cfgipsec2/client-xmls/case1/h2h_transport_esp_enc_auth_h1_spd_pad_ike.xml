<ietf-ipsec xmlns="http://example.net/ietf-ipsec" xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0">
<ipsec nc:operation="merge">
  <spd>
  <spd-entry>
    <rule-number>1</rule-number>
    <names>
      <name>out/192.168.123.100/192.168.123.200</name>
    </names>
    <condition>
      <traffic-selector-list>
        <ts-number>7</ts-number>
        <direction>OUTBOUND</direction>
        <local-addresses>
          <start>192.168.123.100/32</start>
          <end>192.168.123.100/32</end>
        </local-addresses>
        <remote-addresses>
          <start>192.168.123.200/32</start>
          <end>192.168.123.200/32</end>
        </remote-addresses>
        <next-layer-protocol>TCP</next-layer-protocol>
        <local-ports>
          <start>0</start>
          <end>0</end>
        </local-ports>
        <remote-ports>
          <start>0</start>
          <end>0</end>
        </remote-ports>
      </traffic-selector-list>
    </condition>
    <processing-info>
      <action>PROTECT</action>
      <ipsec-sa-cfg>
        <security-protocol>esp</security-protocol>
        <mode>TRANSPORT</mode>
      </ipsec-sa-cfg>
    </processing-info>
  </spd-entry>
  </spd>
  <pad>
    <pad-entries>
      <pad-entry-id>7</pad-entry-id>
      <ipv4-address>192.168.123.200</ipv4-address>
      <pad-auth-protocol>IKEv2</pad-auth-protocol>
      <auth-method>
        <auth-m>pre-shared</auth-m>
        <pre-shared>
          <secret>secreto_compartido</secret>
        </pre-shared>
      </auth-method>
    </pad-entries>
  </pad>
</ipsec>
<ikev2>
  <ike-connection>
    <ike-conn-entries>
      <conn-name>gateway1</conn-name>
      <autostartup>ALWAYSON</autostartup>
      <version>ikev2</version>
      <ike-reauth-lifetime>60</ike-reauth-lifetime>
	  <ike-sa-lifetime>30</ike-sa-lifetime>
	  <ipsec-sa-lifetime>10</ipsec-sa-lifetime>
      <dh_group>2048</dh_group>
      <local>
        <ipv4>192.168.123.100</ipv4>
        <my-identifier>Ignacio</my-identifier>
      </local>
      <remote>
       <ipv4>192.168.123.200</ipv4>
        <my-identifier>Ruben</my-identifier>
      </remote>
      <pfs_group>0</pfs_group>
      <!--<phase2-lifetime>100</phase2-lifetime>
      <phase2-authalg>hmac-md5-96</phase2-authalg>
      <phase2-encalg>3des</phase2-encalg>-->
    </ike-conn-entries>
  </ike-connection>
</ikev2>
</ietf-ipsec>
